# Custom Aliases
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias l='ls -la'
alias ll='ls -l'
alias h='history'
alias free='free -m'
alias dh='df -h'
alias clear='cat /data/brain && clear'

# Custom Aliases for vagrant
alias vd="vagrant destroy -f"
alias vu="vagrant up"
alias vs="vagrant status"
alias vdu="vagrant destroy -f && vagrant up"
alias vssh="vagrant ssh"

# Custom Aliases for chef kitchen
alias kc='kitchen converge'
alias kd='kitchen destroy'
alias kt='kitchen test'
alias kv='kitchen verify'
alias kl='kitchen list'
alias klg='kitchen login'
alias kcv='kitchen converge && kitchen verify'

# Custom Aliases for git
alias gpo='git push origin master'
alias gpu='git pull upstream master'
alias ga='git add .'
alias gb='git branch'
alias gr='git remote -v'
alias gs='git status'

alias gi='
echo "Remotes";
echo "-------";
git remote -v;
echo
echo "Branches";
echo "-------";
git branch;
echo
echo "Status"
echo "-------";
git status'

# Custom Aliases for tmux
alias tl='tmux list-session'
alias ta='tmux attach-session'

# MAC commands
alias removeds='find . -name *.DS_Store -type f -delete'
